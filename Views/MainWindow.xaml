<Window x:Class="M06_A01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M06_A01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button
            DockPanel.Dock="Top"
            Content="Afegir"
            Click="ButtonAfegir_Click"
            Margin="5"/>

        <Button
            DockPanel.Dock="Top"
            Content="Modificar/Esborrar"
            Click="ButtonModificar_Click"
            Margin="5"/>

        <Button
            DockPanel.Dock="Top"
            Content="Mostrar"
            Click="ButtonMostrar_Click"
            Margin="5"/>

        <Label/>
    </DockPanel>
</Window>
