<Window x:Class="M06_A01.Views.MostrarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M06_A01.Views"
        mc:Ignorable="d"
        Title="MostrarWindow" Height="450" Width="800">
    <Grid>
        <DataGrid
            Name="StudentsGrid"
            AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="AverageScore" Binding="{Binding AverageScore}" />
                <DataGridTextColumn Header="Dual" Binding="{Binding Dual}" />
                <DataGridTextColumn Header="Cicle" Binding="{Binding Cicle}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
